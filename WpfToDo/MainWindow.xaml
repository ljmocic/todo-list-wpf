<Window x:Class="WpfToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfToDo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="dataGrid" SelectedItem="{Binding Path=SelectedTask, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Path=Tasks, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="263" Margin="10,46,0,0" VerticalAlignment="Top" Width="417"/>
        <Button x:Name="buttonAdd" Click="buttonAdd_Click" Content="Add" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="75" Height="31"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="417"/>
        <Button x:Name="buttonDelete" Click="buttonDelete_Click" Content="Delete" HorizontalAlignment="Left" Margin="432,46,0,0" VerticalAlignment="Top" Width="75" Height="31" RenderTransformOrigin="0.517,2.049"/>
    </Grid>
</Window>
